<div id="map-arena-basic" class="clearfix">
	<div class="bookmark main">

		<section class="central">
			<div class="block loc-menu clearfix">
				<div class="details">
					<h2>Alcovd Arena</h2>
					<i>No owner, No bonus</i>
				</div>

				<ol class="menu no-style horizontal-central clearfix">
					<li class="ui-map-button ui-form exit little-label2" style="top:100px; left:400px">
						<form action="move" class="socket">
							<input type="hidden" name="to" value="town">
							<input type="submit" value="back to town">
						</form>
						Back to town
					</li>


					<li class="ui-map-button ui-form battle" style="top:100px; left:485px">
						<form action="battle" class="socket">
							<input type="hidden" name="action" value="init">
							<input type="hidden" name="type" value="arena">
							<input type="submit" value="attack!">
